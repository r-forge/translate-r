#: R-admin.texi:2584 R-admin.texi:2657
#, no-wrap
msgid "LANGUAGE"
msgstr ""

#. type: enindex
#: R-admin.texi:2585
#, no-wrap
msgid "LC_ALL"
msgstr ""

#. type: enindex
#: R-admin.texi:2586
#, no-wrap
msgid "LC_MESSAGES"
msgstr ""

